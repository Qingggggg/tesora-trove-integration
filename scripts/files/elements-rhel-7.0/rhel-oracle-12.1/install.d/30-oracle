#!/bin/sh

# CONTEXT: GUEST during CONSTRUCTION as ROOT
# PURPOSE: Install Oracle software
# REFERENCES: Section numbers used in this script are based on this document:
# Deploying Oracle Database 12c R1 on Red Hat Enterprise Linux 7

set -o xtrace

# 3.3.3 Oracle Database 12c Release 1 (12.1) Package Requirements
yum -y groupinstall "Base"
yum -y groupinstall "Core"
yum -y install binutils compat-libcap1 compat-libstdc++-33 gcc gcc-c++ glibc glibc-devel ksh libgcc libstdc++ libstdc++-devel libaio libaio-devel libXext libXtst libX11 libXau libxcb libXi make sysstat libXmu libXt libXv libXxf86dgak libXxf86misc libXxf86vm xorg-x11-utils xorg-x11-xauth

# Security rules are managed at the OpenStack level, remove the firewalld service that was
# installed from the "Core" group
yum -y remove firewalld

# 3.3.6 - 3.3.12
cat <<EOT >> /etc/sysctl.conf
# Settings required by Oracle

# Setting Virtual Memory
vm.swappiness = 0
vm.dirty_background_ratio = 3
vm.dirty_ratio = 80
vm.dirty_expire_centisecs = 500
vm.dirty_writeback_centisecs = 100

# Setting Shared Memory
kernel.shmmax = 4398046511104
kernel.shmall = 1073741824
kernel.shmmni = 4096

# Setting Semaphores
kernel.sem = 250 32000 100 128

# Ephemeral Network Ports
net.ipv4.ip_local_port_range = 9000 65500

# Optimizing Network Settings
net.core.rmem_default = 262144
net.core.rmem_max = 4194304
net.core.wmem_default = 262144
net.core.wmem_max = 1048576

# Increasing synchronous I/O Requests
fs.aio-max-nr = 1048576

# Increasing File Handles
fs.file-max = 6815744
EOT

sysctl -p

# 3.3.13 - User Accounts & Groups
groupadd --gid 54321 oinstall
groupadd --gid 54322 dba
groupadd --gid 54323 asmdba
groupadd --gid 54324 asmoper
groupadd --gid 54325 asmadmin
groupadd --gid 54326 oper
groupadd --gid 54327 backupdba
groupadd --gid 54328 dgdba
groupadd --gid 54329 kmdba

useradd --uid 54321 --gid oinstall --groups dba,oper,asmdba,asmoper,backupdba,dgdba,kmdba oracle
sudo echo oracle:oracle | /usr/sbin/chpasswd
useradd --uid 54322 --gid oinstall --groups dba,asmadmin,asmdba,asmoper grid
sudo echo grid:grid | /usr/sbin/chpasswd

# 3.3.14 - Setting Shell Limits for the Grid and Oracle User
cat <<EOT >> /etc/security/limits.d/99-grid-oracle-limits.conf
oracle soft nproc 2047
oracle hard nproc 16384
oracle soft nofile 1024
oracle hard nofile 65536
oracle soft stack 10240
oracle hard stack 32768
grid soft nproc 2047
grid hard nproc 16384
grid soft nofile 1024
grid hard nofile 65536
grid soft stack 10240
grid hard stack 32768
EOT

cat <<EOT >> /etc/profile.d/oracle-grid.sh
#Setting the appropriate ulimits for oracle and grid user
if [ $USER = "oracle" ]; then
	if [ $SHELL = "/bin/ksh" ]; then
		ulimit -u 16384
		ulimit -n 65536
	else
		ulimit -u 16384 -n 65536
	fi
fi
if [ $USER = "grid" ]; then
	if [ $SHELL = "/bin/ksh" ]; then
		ulimit -u 16384
		ulimit -n 65536
	else
		ulimit -u 16384 -n 65536
	fi
fi
EOT

# Unpack Oracle installation files
ORACLE_BASE=/u01/app/oracle
ORACLE_INST=$ORACLE_BASE/oracle-software
ORACLE_HOME=$ORACLE_BASE/product/12.1.0/dbhome_1
SETUP_RSP=/home/oracle/oracle-setup.rsp

cp $(dirname $0)/files/oracle-setup.rsp $SETUP_RSP
chown oracle.oinstall $SETUP_RSP

mkdir -p $ORACLE_INST
chown -R oracle.oinstall /u01

cp /tmp/in_target.d/linuxamd64_12102_database_1of2.zip $ORACLE_INST/
cp /tmp/in_target.d/linuxamd64_12102_database_2of2.zip $ORACLE_INST/

chown oracle.oinstall $ORACLE_INST/linuxamd64_12102_database_1of2.zip
chown oracle.oinstall $ORACLE_INST/linuxamd64_12102_database_2of2.zip

runuser -l oracle -c "unzip $ORACLE_INST/linuxamd64_12102_database_1of2.zip -d $ORACLE_INST"
runuser -l oracle -c "unzip $ORACLE_INST/linuxamd64_12102_database_2of2.zip -d $ORACLE_INST"

# Run the installer
runuser -l oracle -c "$ORACLE_INST/database/runInstaller -silent -waitforcompletion -responseFile $SETUP_RSP"

# Run root scripts required by Oracle after installation
/u01/app/oraInventory/orainstRoot.sh
/u01/app/oracle/product/11.2.0/dbhome_1/root.sh

# Install the Oracle listener
runuser -l oracle -c "cp $ORACLE_INST/database/response/netca.rsp /home/oracle"
runuser -l oracle -c "$ORACLE_HOME/bin/netca -silent -responseFile /home/oracle/netca.rsp"

# Remove the listener.ora file generated by netca because in some cases it would cause
# the listener to bind to the wrong network interface on start
rm $ORACLE_HOME/network/admin/listener.ora

# Cleaning up the Oracle installation files
rm -rf $ORACLE_INST

# Configure scripts to start the lisener and DB's on boot
cat <<EOT >> /etc/profile.d/oracle-path.sh
export ORACLE_HOME=$ORACLE_HOME
export PATH=\$PATH:\$ORACLE_HOME/bin
export LD_LIBRARY_PATH=\$LD_LIBRARY_PATH:\$ORACLE_HOME/lib
EOT

mkdir -p /home/oracle/scripts
cat <<EOT >> /home/oracle/scripts/startup.sh
#!/bin/bash
export ORACLE_HOME=$ORACLE_HOME
export ORACLE_HOME_LISTNER=$ORACLE_HOME
$ORACLE_HOME/bin/lsnrctl start
$ORACLE_HOME/bin/dbstart
EOT

cat <<EOT >> /home/oracle/scripts/shutdown.sh
#!/bin/bash
$ORACLE_HOME/bin/dbshut
$ORACLE_HOME/bin/lsnrctl stop
EOT

chmod a+x /home/oracle/scripts/*

cat <<EOT >> /usr/lib/systemd/system/dbora.service
[Unit]
Description=The Oracle Database Service
After=syslog.target network.target

[Service]
Type=simple
RemainAfterExit=yes
User=oracle
Group=oinstall
ExecStart=/home/oracle/scripts/startup.sh
ExecStop=/home/oracle/scripts/shutdown.sh

[Install]
WantedBy=multi-user.target
EOT

ln -s /usr/lib/systemd/system/dbora.service /etc/systemd/system/dbora.service

systemctl enable dbora.service

# Install the cx_Oracle libary
export ORACLE_HOME=$ORACLE_HOME
export LD_LIBRARY_PATH=$ORACLE_HOME/lib/:$LD_LIBRARY_PATH
echo "$ORACLE_HOME/lib/" > /etc/ld.so.conf.d/oracle.conf
ldconfig
pip install cx_Oracle
