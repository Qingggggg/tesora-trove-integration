#!/bin/sh

# CONTEXT: GUEST during CONSTRUCTION as ROOT
# PURPOSE: Install controller base required packages

set -e
set -o xtrace

mkdir /var/lib/mysql

yum -y install MariaDB-server MariaDB-client percona-xtrabackup

# add an include for /etc/my.cnf.d to /etc/my.cnf
MYSQL_CONF_D="/etc/my.cnf.d/"
mkdir -p "$MYSQL_CONF_D"
echo "!includedir $MYSQL_CONF_D" >> "/etc/my.cnf"

chkconfig mysql on
