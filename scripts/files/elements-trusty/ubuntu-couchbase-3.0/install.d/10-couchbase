set -e
set -o xtrace

export DEBIAN_FRONTEND=noninteractive
apt-get install -qy libssl0.9.8 wget

wget http://packages.couchbase.com/releases/3.0.1/couchbase-server-community_3.0.1-ubuntu12.04_amd64.deb

INSTALL_DONT_START_SERVER=1 dpkg -i couchbase-server-community_3.0.1-ubuntu12.04_amd64.deb

rm couchbase-server-community_3.0.1-ubuntu12.04_amd64.deb
